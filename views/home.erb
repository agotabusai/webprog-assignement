<% unless session[:logged_in] %>
<form action="/login" method="POST">
    <fieldset>
	<legend>Bejelentkezes/legend>
	<p>
	    <label for="user">Felhasznalonev</label>
	    <input type="text" id="user" name="user" />
		</p>
		<p>
		    <label for="pass">Jelszo</label>
		    <input type="password" id="pass" name="pass" />
		</p>
		<p><input type="submit" value="Mehet" /></p>
	</fieldset>
</form>
<% else %>
<p><a href="titkok">Titkok...</a></p>
<p><a href="logout">Kijelentkezes</a></p>
<% end %>